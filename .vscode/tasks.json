{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build to bin",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++23",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the active file to bin/ using Clang and C++23."
        }
    ],
    "version": "2.0.0"
}
